        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "glob": "^10.0.0",
        "minimatch": "10.2.2"
    },
    "devDependencies": {
        "@types/bun": "1.3.4",
        "@types/node": "22.13.9",
        "@tsconfig/node22": "22.0.2",
        "typescript": "5.8.2"
    }
}