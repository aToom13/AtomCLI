{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/bun/tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "@opentui/solid",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [],
    "noUncheckedIndexedAccess": false,
    "customConditions": [
      "browser"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@tui/*": ["./src/interfaces/cli/cmd/tui/*"]
    },
    "strict": false
  }
}
